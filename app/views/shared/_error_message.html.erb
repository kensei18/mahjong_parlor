<% if object.errors.any? %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="error-message">
        <h4><span class="glyphicon glyphicon-remove-sign"></span>
          <strong> 入力にエラーがあります</strong></h4>
        <ul>
          <% object.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>

<% provide :title, 'アカウント情報編集' %>
<div class="container">
  <div class="row">
    <%= render 'edit_links' %>
    <div class="col-md-5 col-md-offset-1 col-xs-8 col-xs-offset-2">
      <div class="users-form">
        <h2>アカウント情報編集</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>
          <br>
          <%= f.label :username %>
          <%= f.text_field :username, class: 'form-control', autofocus: true %>
          <br>
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control', autocomplete: "email" %>
          <br>
          <%= f.label :password %> <span>(変更がない場合は記入不要です)</span><br>
          <% if @minimum_password_length %>
            <em><%= @minimum_password_length %>文字以上</em>
          <% end %>
          <%= f.password_field :password, class: 'form-control', autocomplete: "new-password" %>
          <br>
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password" %>
          <br>
          <%= f.label :current_password %>
          <p>(編集内容保存のため、現在のパスワードをご記入ください)</p>
          <%= f.password_field :current_password, class: 'form-control', autocomplete: "current-password" %>
          <br>
          <div class="actions">
            <%= f.submit "保存", class: 'btn btn-info' %>
          </div>
        <% end %>
        <br>
        <%= link_to "元に戻す", :back %>
      </div>
    </div>
  </div>
</div>

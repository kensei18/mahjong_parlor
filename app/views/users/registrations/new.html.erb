<% provide :title, 'アカウント登録' %>
<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4 col-xs-8 col-xs-offset-2">
      <div class="users-form">
        <h2>アカウント登録</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>
          <br>
          <%= f.label :username %>
          <%= f.text_field :username, class: 'form-control', autofocus: true %>
          <br>
          <%= f.label :email %><br>
          <%= f.email_field :email, class: 'form-control', autocomplete: "email" %>
          <br>
          <%= f.label :password %>
          <% if @minimum_password_length %>
            <span>(<%= @minimum_password_length %>文字以上)</span>
          <% end %><br>
          <%= f.password_field :password, class: 'form-control', autocomplete: "new-password" %>
          <br>
          <%= f.label :password_confirmation %><br>
          <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password" %>
          <br>
          <%= f.submit "アカウント登録", class: 'form-btn btn-info' %>
        <% end %>
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>

<% provide :title, "アカウント削除" %>
<div class="container">
  <div class="row">
    <%= render 'users/registrations/edit_links' %>
    <div class="col-md-5 col-md-offset-1 col-xs-8 col-xs-offset-2">
      <div class="users-form">
        <h3>アカウントを削除する</h3>
        <br>
        <h5>本当に良いですか？</h5>
        <br>
        <div class="actions">
          <%= button_to "アカウント削除", registration_path(current_user), class: 'btn btn-danger',
                        data: { confirm: "削除しても良いですか？" }, method: :delete %>
        </div>
      </div>
    </div>
  </div>
</div>

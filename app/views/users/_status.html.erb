<div class="user-status">
  <h4><strong>ステータス</strong></h4>
  <div class="row">
    <div class="col-sm-6 col-sm-offset-0 col-xs-11 col-xs-offset-1">
      <p>投稿: <strong><%= user.reviews.size %></strong></p></div>
    <div class="col-sm-6 col-sm-offset-0 col-xs-11 col-xs-offset-1">
      <p>コメント: <strong><%= user.comments.size %></strong></p></div>
    <div class="col-sm-6 col-sm-offset-0 col-xs-11 col-xs-offset-1" id="followers_count">
      <%= link_to followers_user_path(user) do %>
        <p>フォロワー: <strong><%= user.followers.size %></strong></p>
      <% end %>
    </div>
    <div class="col-sm-6 col-sm-offset-0 col-xs-11 col-xs-offset-1">
      <%= link_to following_user_path(user) do %>
        <p>フォロー: <strong><%= user.following.size %></strong></p>
      <% end %>
    </div>
    <div class="col-sm-6 col-sm-offset-0 col-xs-11 col-xs-offset-1">
      <%= link_to favorites_user_path(user) do %>
        <p>行きつけ: <strong><%= user.favorites.size %></strong></p>
      <% end %>
    </div>
    <div class="col-sm-6 col-sm-offset-0 col-xs-11 col-xs-offset-1">
      <%= link_to likes_user_path(user) do %>
        <p>いいね！: <strong><%= user.likes.size %></strong></p>
      <% end %>
    </div>
  </div>
</div>

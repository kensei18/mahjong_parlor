<div class="modal fade review-modal" id="review-modal-<%= review.id %>" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <small>
          <%= link_to review.user.username, user_path(review.user) %>さんのレビュー
        </small><br>
        <small>投稿: <%= l review.created_at, format: :short %></small>
        <h4><strong><%= review.title %></strong></h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <% Review.rating_attributes.each do |attr| %>
            <div class="col-sm-6 col-sm-offset-0 col-xs-11 col-xs-offset-1">
              <label><%= Review.human_attribute_name(attr) %>：</label>
              <% review.send(attr).times do %>
                <span class="glyphicon glyphicon-star review-star"></span>
              <% end %>
              <% review.blank_stars(attr).times do %>
                <span class="glyphicon glyphicon-star review-unstar"></span>
              <% end %>
            </div>
          <% end %>
        </div>
        <hr>
        <h5><strong><%= Review.human_attribute_name(:content) %></strong></h5>
        <p><%= review.content %></p>
      </div>
      <div class="modal-footer">
        <% if current_user == review.user %>
          <%= link_to "レビュー編集", edit_review_path(review), class: 'btn btn-primary' %>
          <%= link_to "レビュー削除", review_path(review), class: 'btn btn-danger',
                      method: :delete, data: { confirm: "削除しても良いですか？" } %>
        <% end %>
        <button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
      </div>
    </div>
  </div>
</div>

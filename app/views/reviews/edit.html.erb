<% provide :title, "レビュー編集" %>
<% provide :url, review_path(@review) %>
<% provide :submit, "保存" %>
<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="review-form">
        <h2>レビュー編集</h2>
        <h3><%= @review.parlor.name %></h3>
        <%= render 'form', review: @review %>
        <div class="row">
          <div class="col-sm-8 col-sm-offset-2">
            <%= link_to "レビュー削除", review_path(@review), class: 'form-btn btn-danger',
                        method: :delete, data: { confirm: "削除しても良いですか？" } %>
          </div>
        </div>
        <br>
        <%= link_to "お店のページへ戻る", parlor_path(@review.parlor), class: 'btn btn-default' %>
      </div>
    </div>
  </div>
</div>
